 <div>
      <div  id="slideshow"  class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button data-bs-target="#slideshow" data-bs-slide-to="0" class="active"></button>
            <button data-bs-target="#slideshow" data-bs-slide-to="1"></button>
            <button data-bs-target="#slideshow" data-bs-slide-to="2"></button>
        </div>
        
        <div  class="carousel-inner">
            <div  class="carousel-item active">
                <img src="image/titer.svg" alt=""  class="w-100 d-block p-2">
            </div>
            <div class="carousel-item">
                <img src="image/titer.svg" alt="" class="w-100  d-block p-2 ">
            </div>
            <div class="carousel-item">
                <img src="image/titer.svg" alt="" class="w-100  d-block p-2">
            </div>
        </div>
    
        <button class="carousel-control-prev" data-bs-target="#slideshow" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" data-bs-target="#slideshow" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>

    </div>
    </div>

    <div class="d-flex flex-column justify-content-center my-5 shadow border-top border-bottom border-2 border-success rounded-2">

        <div class="d-flex justify-content-center">
            <h1 class="">محصولات منتخب</h1>
        </div>

        <div class="d-flex flex-wrap justify-content-center">
            @for(int i=0;i<4;i++)
            {
            <a class="w-25" asp-page="/Product" asp-route-code="@Model.MontakhabData[i].Code">
            <div class="card">
                <img class="card-img-top rounded-2" src="image/@Model.MontakhabData[i].ImageSm" alt="">
                <h3 class="card-title text-center">@Model.MontakhabData[i].Description </h3>
            </div>
            </a>
            }
        </div>
    </div>

 <div class="d-flex flex-column justify-content-center my-5 shadow border-top border-bottom border-2 border-success rounded-2">

        <div class="d-flex justify-content-center my-3">
            <h1 class="h1">ویترن</h1>
        </div>

    <div id="vitrin" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-inner bg-white">

          <div class="carousel-item active">
            <div class="d-flex justify-content-center">
              <div class="card bg-dark-subtle w-25">
                <img class="card-img-top rounded-2 p-1" src="image/@Model.VitrinData[0].ImageSm" alt="">
                <div class="card-body d-grid">
                  <h4 class="card-title">@Model.VitrinData[0].Name</h4>
                  <p class="card-text">@Model.VitrinData[0].Description</p>
                  <a asp-page="/Product" asp-route-code="@Model.VitrinData[0].Code" class="btn btn-block btn-lg bg-success text-white">خرید</a>
                </div>
            </div>
          </div>
        </div>

          <div class="carousel-item">
            <div class="d-flex justify-content-center">
              <div class="card bg-dark-subtle w-25">
                <img class="card-img-top rounded-2 p-1" src="image/@Model.VitrinData[1].ImageSm" alt="">
                <div class="card-body d-grid">
                  <h4 class="card-title">@Model.VitrinData[1].Name</h4>
                  <p class="card-text">@Model.VitrinData[1].Description</p>
                  <a asp-page="/Product" asp-route-code="@Model.VitrinData[1].Code" class="btn btn-block btn-lg bg-success text-white">خرید</a>
                </div>
            </div>
          </div>
        </div>

        </div>
        <button class="carousel-control-prev" data-bs-target="#vitrin" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" data-bs-target="#vitrin" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
      </div>
    </div>
    
    <div class="d-flex flex-column justify-content-center shadow my-5">

        <div>
            <h1 class="text-black text-center">دسته بندی</h1>
        </div>

        <div class="d-flex flex-wrap justify-content-around my-4">
            @for(int i=0;i<3;i++)
                {
                var product =Model.Category[i];
                 <div class="card rounded-5 border-0">
                <img class="card-img-top" src="image/@product.Image" alt="">
                <h4 class="card-title text-center">@product.ImageName</h4>
                 </div>
                }
        </div>

        <div class="d-flex flex-wrap justify-content-around my-2">
            @for(int i=3;i<6;i++)
                {
                var product =Model.Category[i];
                 <div class="card rounded-5 border-0">
                <img class="card-img-top" src="image/@product.Image" alt="">
                <h4 class="card-title text-center">@product.ImageName</h4>
                 </div>
                }
        </div>

    </div>
      
